{
    "database": {
        "rules": "database.rules.json"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "public",
        "rewrites": [
            {
                "source": "**/**",
                "function": "nextjs-server"
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "functions": {
        "source": ".",
        "ignore": [
            ".firebase/**",
            ".firebaserc",
            "firebase.json",
            "**/node_modules/**",
            "**/public/**"
        ]
    }
}